<FinancialSection>
    size_hint_y: None
    height: self.width
    #size: '300dp', '300dp'
    pos_hint: {'center_y': 0.5}

<ReportSection>
    size_hint_y: None
    height: self.width
    pos_hint: {'center_y': 0.5}

<ExpensesRow>
    orientation: 'vertical'

    MDDivider:

    MDLabel:
        text: root.text
        halign: root.halign_value
        font_size: '14sp'

<SheetGrid>:
    cols: root.cols
    row_default_height: '45dp'
    row_force_default: True
    height: self.minimum_height

<IncomeSheetGrid>:
    cols: root.cols
    row_default_height: '45dp'
    row_force_default: True
    height: self.minimum_height

<TypeButton>
    style: 'outlined'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    size: dp(135), dp(35)
    radius: [0, 0, 0, 0]

<MonthButton>
    style: 'outlined'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    size: dp(135), dp(35)
    radius: [0, 0, 0, 0]

<ExpenseMonthButton>
    style: 'outlined'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    size: dp(135), dp(35)
    radius: [0, 0, 0, 0]

<IncomeYearButton>
    style: 'outlined'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    size: dp(135), dp(35)
    radius: [0, 0, 0, 0]

<ExpenseYearButton>
    style: 'outlined'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    size: dp(135), dp(35)
    radius: [0, 0, 0, 0]    

<AddExp>
    orientation: 'vertical'
    spacing: '10dp'
    size_hint_x: 0.25
    pos_hint: {'center_y': 0.85}

    MDLabel:
        text: root.text
        halign: 'center'
        valign: 'top'

    TextInput:
        text: root.text_input.text
        on_text: root.text_input.text = self.text
        size_hint_y: None
        height: '30dp'

<FinancialScreen>
    MDBoxLayout:
        id: financial_screen
        opacity: 0
        disabled: True
        size: root.size
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        orientation: 'horizontal'
        spacing: '25dp'

    MDBoxLayout:
        id: financial_box
        size: root.size
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        orientation: 'horizontal'
        spacing: '25dp'

        Widget:

        FinancialSection:
            id: exp_btn
            on_press: root.show_exp()
            MDLabel:
                text: 'Costs and Expenses'
                halign: 'center'
                font_size: '24sp'
                bold: True
            
        FinancialSection:
            id: sales_btn
            on_press: root.show_inc()
            MDLabel:
                text: 'Sales and Income'
                halign: 'center'
                bold: True

        FinancialSection:
            id: rep_btn
            on_press: root.show_rep()
            MDLabel:
                text: 'Financial Reports'
                halign: 'center'
                bold: True

        Widget:

    MDCard:
        id: exp_box
        opacity: 0
        disabled: True
        style: 'elevated'
        size_hint: 0.9, 0.85
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        padding: [60, 15, 30, 15]
        #spacing: '10dp'
        orientation: 'vertical'
        
        MDBoxLayout:
            size_hint: 1, 0.15
            padding: '35dp'
            spacing: '10dp'
            orientation: 'horizontal'

            MDLabel:
                id: exp_lable
                text: 'EXPENSES'
                halign: 'center'
                valign: 'middle'

            MDLabel:
                text: 'Type:'
                halign: 'right'

            TypeButton:
                id: type_input
                MDButtonText:
                    id: type_btn
                    text: 'All'
                    halign: 'left'
                    on_text: root.display_exp()
                MDButtonIcon:
                    icon: 'menu'
                    style: "standard"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    radius: [self.height / 2, ]
                    size_hint: None, None
                    size: "30dp", "30dp"

            MDLabel:
                text: 'Month:'
                halign: 'right'

            ExpenseMonthButton:
                id: exp_month_input
                MDButtonText:
                    id: exp_month_btn
                    text: root.current_month()
                    halign: 'left'
                    on_text: root.display_exp()
                MDButtonIcon:
                    icon: 'menu'
                    style: "standard"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    radius: [self.height / 2, ]
                    size_hint: None, None
                    size: "30dp", "30dp"

            MDLabel:
                text: 'Year:'
                halign: 'right'

            ExpenseYearButton:
                id: exp_year_input
                MDButtonText:
                    id: exp_year_btn
                    text: str(root.current_year())
                    halign: 'left'
                    on_text: root.display_exp()
                MDButtonIcon:
                    icon: 'menu'
                    style: "standard"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    radius: [self.height / 2, ]
                    size_hint: None, None
                    size: "30dp", "30dp"

            Widget:        

            MDBoxLayout:
                md_bg_color: 'lightgray'
                #padding: [0, 0, 15, 0]
                MDLabel:
                    text: 'TOTAL:   '
                    halign: 'right'

                MDLabel:
                    id: total_exp
                    #text: str(root.return_total()) + '0'
                    halign: 'left'
                    bold: True

        MDBoxLayout:
            id: sheet_head
            size_hint: 1, 0.1
            padding: [0, 0, 35, 0]

        SheetGrid:
            id: sheet_box
            padding: [0, 0, 35, 0]

        MDBoxLayout:
            size_hint: None, None
            size: dp(100), dp(35)
            pos_hint: {'center_x': 0.95, 'center_y': 0.1}
            spacing: 0
            Button:
                id: prev_exp_btn
                text: '<'
                color: 'black'
                background_normal: ''
                background_color: financial_box.md_bg_color
                size_hint: None, None
                size: dp(35), dp(35)
                font_size: '24sp'

            Label:
                id: exp_id
                text: root.ids.sheet_box.page_id
                size_hint: None, None
                size: dp(35), dp(35)
                color: 'black'
                font_size: '14sp'

            Button:
                id: next_exp_btn
                text: '>'
                size_hint: None, None
                size: dp(35), dp(35)
                color: 'black'
                background_normal: ''
                background_color: financial_box.md_bg_color
                font_size: '24sp'

    MDTopAppBar:
        size_hint: 1, 0.09

    MDFabButton:
        id: back_btn
        opacity: 0
        disabled: True
        icon: 'arrow-left'
        pos_hint: {'center_x': 0.88, 'center_y': 0.07}
        on_press: root.go_back()
            
    MDFabButton:
        id: plus_exp_btn
        opacity: 0
        disabled: True
        icon: 'plus'
        pos_hint: {'center_x': 0.93, 'center_y': 0.07}
        on_press: add_exp_drawer.set_state('toggle')

    MDFabButton:
        id: back_inc_btn
        opacity: 0
        disabled: True
        icon: 'arrow-left'
        pos_hint: {'center_x': 0.93, 'center_y': 0.07}
        on_press: root.go_back()

    MDNavigationLayout:
            
        MDNavigationDrawer:
            id: add_exp_drawer
            size_hint: 0.8, 0.45
            pos_hint: {'center_y': 0.5, 'center_y': 0.5}
            spacing: '10dp'
            orientation: 'vertical'
            on_close: root.close_add_exp()

            MDLabel:
                text: 'Add an unforeseen expense'

            MDBoxLayout:
                id: add_item_card
                orientation: 'horizontal'
                spacing: '15dp'
            
                Widget:

                AddExp:
                    id: exp_name
                    text: 'Name'

                AddExp:
                    id: exp_qua
                    text: 'Quantity'

                AddExp:
                    id: exp_price
                    text: 'Price'

                Widget:

            MDButton:
                id: exp_submit
                style: 'filled'
                size_hint: 0.2, None
                height: '35dp'
                pos_hint: {'center_x': 0.75}
                on_press: 
                    add_exp_drawer.set_state('toggle')
                    root.add_exp()
                MDButtonText:
                    text: 'Submit'

    MDCard:
        id: inc_box
        opacity: 0
        disabled: True
        style: 'elevated'
        size_hint: 0.9, 0.85
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        padding: [60, 15, 30, 15]
        #spacing: '10dp'
        orientation: 'vertical'
        
        MDBoxLayout:
            size_hint: 1, 0.15
            padding: '35dp'
            spacing: '10dp'
            orientation: 'horizontal'

            MDLabel:
                id: inc_lable
                text: 'INCOME'
                halign: 'center'
                valign: 'middle'

            MDLabel:
                text: 'Month:'
                halign: 'right'

            MonthButton:
                id: month_input
                MDButtonText:
                    id: month_btn
                    text: root.current_month()
                    halign: 'left'
                    on_text: root.display_inc()
                MDButtonIcon:
                    icon: 'menu'
                    style: "standard"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    radius: [self.height / 2, ]
                    size_hint: None, None
                    size: "30dp", "30dp"

            MDLabel:
                text: 'Year:'
                halign: 'right'

            IncomeYearButton:
                id: year_input
                MDButtonText:
                    id: year_btn
                    text: str(root.current_year())
                    halign: 'left'
                    on_text: root.display_inc()
                MDButtonIcon:
                    icon: 'menu'
                    style: "standard"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    radius: [self.height / 2, ]
                    size_hint: None, None
                    size: "30dp", "30dp"

            Widget:

            MDBoxLayout:
                md_bg_color: 'lightgray'
                #padding: [0, 0, 15, 0]
                MDLabel:
                    text: 'TOTAL:   '
                    halign: 'right'

                MDLabel:
                    id: total_inc
                    halign: 'left'
                    bold: True

        MDBoxLayout:
            id: inc_sheet_head
            size_hint: 1, 0.1
            padding: [0, 0, 35, 0]

        IncomeSheetGrid:
            id: inc_sheet_box
            padding: [0, 0, 35, 0]

        MDBoxLayout:
            size_hint: None, None
            size: dp(100), dp(35)
            pos_hint: {'center_x': 0.95, 'center_y': 0.1}
            spacing: 0
            Button:
                id: prev_inc_btn
                text: '<'
                color: 'black'
                background_normal: ''
                background_color: financial_box.md_bg_color
                size_hint: None, None
                size: dp(35), dp(35)
                font_size: '24sp'

            Label:
                id: inc_id
                text: root.ids.inc_sheet_box.page_id
                size_hint: None, None
                size: dp(35), dp(35)
                color: 'black'
                font_size: '14sp'

            Button:
                id: next_inc_btn
                text: '>'
                size_hint: None, None
                size: dp(35), dp(35)
                color: 'black'
                background_normal: ''
                background_color: financial_box.md_bg_color
                font_size: '24sp'