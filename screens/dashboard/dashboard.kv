<MyNavigationDrawerItem>:
    
    MDIconButton:
        icon: root.icon
        size_hint: None, None
        size: dp(24), dp(24)
        pos_hint: {'center_y': 0.5}
        
    MDLabel:
        text: root.text
        pos_hint: {'center_x': 0.65,'center_y': 0.45}
        size_hint_x: 1

<DashboardScreen>:
    MDFloatLayout:
        id: board_screen
        size: root.size
        pos: root.pos

        MDTopAppBar:
            type: 'small'
            size_hint: 1, 0.07
            pos_hint: {'center_x': 0.5, 'center_y': 0.965}
            md_bg_color: app.theme_cls.primary_color

            MDTopAppBarLeadingButtonContainer:
                MDIconButton:
                    icon: 'menu'
                    pos_hint: {'center_y': 0.5}
                    on_release: nav_drawer.set_state('toggle')
            
            MDTopAppBarTitle:
                text: 'Entrepreno'

            MDTopAppBarTrailingButtonContainer:
                MDIconButton:
                    icon: 'account-circle-outline'
                    pos_hint: {'center_y': 0.5}
                    on_release: account_drawer.set_state('toggle')

        MDFloatLayout:
            id: board_box  
            size_hint: 1, 0.9
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
           
        MDNavigationLayout:
            
            MDNavigationDrawer:
                id: nav_drawer

                MDNavigationDrawerMenu:

                    MyNavigationDrawerItem:
                        icon: 'view-dashboard-outline'
                        text: 'Dashboard'
                        on_press: app.root.get_screen('dashboard').board_box()

                    MyNavigationDrawerItem:
                        icon: 'clipboard-list-outline'
                        text: 'Inventory'
                        on_press: app.on_drawer_press('inventory')

                    MyNavigationDrawerItem:
                        icon: 'finance'
                        text: 'Financial'
                        on_press: app.on_drawer_press('financial')

                    MyNavigationDrawerItem:
                        icon: 'cash-register'
                        text: 'Sales'
                        on_press: app.on_drawer_press('sales')

                    MyNavigationDrawerItem:
                        icon: 'city'
                        text: 'Assets'
                        on_press: app.on_drawer_press('assets')

                    MyNavigationDrawerItem:
                        icon: 'chart-bar'
                        text: 'Analytics'
                        on_press: app.on_drawer_press('analytics')

        MDNavigationLayout:
            
            MDNavigationDrawer:
                id: account_drawer
                size_hint: None, None
                size: dp(250), dp(150)
                pos_hint: {'right': 1, 'y': 0.8} 

                MDNavigationDrawerMenu:

                    MyNavigationDrawerItem:
                        icon: 'account-circle-outline'
                        text: 'Name/email'

                    MyNavigationDrawerItem:
                        icon: 'logout'
                        text: 'Sign Out'
                        on_press: app.sign_out()
